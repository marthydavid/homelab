namespace: metallb-system
helm:
  releaseName: metallb
  chart: metallb
  version: v0.10.2
  repo: https://metallb.github.io/metallb
  values:
    configInline:
      address-pools:
      - addresses:
        - 192.168.11.0/24
        avoid-buggy-ips: true
        name: default
        protocol: bgp
      peers:
      - my-asn: 64501
        peer-address: 192.168.1.1
        peer-asn: 64501
